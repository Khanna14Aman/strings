question==>https://leetcode.com/contest/weekly-contest-263/problems/check-if-numbers-are-ascending-in-a-sentence/


discuss==>https://www.geeksforgeeks.org/processing-strings-using-stdistringstream/

class Solution {
public:
    bool areNumbersAscending(string s) {
        string word;
        istringstream st(s);
        int prev=-1;
        while(st>>word){
            if(isdigit(word[0])){
                int n = stoi(word);
                if(n<=prev)return false;
                prev=n;
            }
        }
        return true;
    }
};
