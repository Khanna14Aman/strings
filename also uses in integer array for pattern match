#include<iostream>
#include<bits/stdc++.h>
#define int long long 
using namespace std;
vector<int> lps(vector<int> s)
{
    int n =s.size();
    int i =1,len =0;
    vector<int>lps(n,0);/*here we can name this vector same as function name and important thing is we need to
                         initialise size of vector and initialise with 0 if you will not then at lps[i] programe gets
                         over or means runtime error*/
    while(i<n)
    {
        //cout<<"1";
        if(s[i]==s[len])        
        {
            len++;
            lps[i]=len;
            i++;
        }
        else
        {
          //  cout<<"3";
            if(len!=0)
            {
            //    cout<<"4";
                len = lps[len-1];
            }
            else
            {
              //  cout<<"5";
                i++;
            }
        }
    }
    //cout<<"7";
    return lps;

}
signed main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int i,n,k;
        cin>>n>>k;
        int a[n],b[k+1];
        for(i=0;i<n;i++)
        {
            cin>>a[i];
        }
        for(i=0;i<k;i++)
        {
            cin>>b[i];
        }
        int d[n-1];
        for(i=1;i<n;i++)  // here we are creating difference array to mactch with pattern of array b which is of size k
        {
            d[i-1]=a[i]-a[i-1];
        }
        vector<int>lp;
        for(i=0;i<k;i++)
        {
            lp.emplace_back(b[i]);
        }
        lp.emplace_back(10000007);
        for(i=0;i<n-1;i++)
        {
            lp.emplace_back(d[i]);
        }
        vector<int>vec = lps(lp);
        int no = vec.size(),count=0;
        {
            for(i=0;i<no;i++)
            {
                if(vec[i]==k)
                {
                    count++;
                }
            }
        }
        cout<<count<<"\n";
    }
    return 0;
}
